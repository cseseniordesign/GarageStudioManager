<div id="pagetitle">
    <h3>Create User</h3>
</div>

<form id="new-user" action="" method="POST" class="bp2-wdn-col-one-half">
    <fieldset>
        <legend>User Details</legend>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" />

        <label for="password">Password</label>
        <input type="password" id="password" name="password" />

        <label for="password">Confirm Password</label>
        <input type="password" id="password2" name="password2" />

        <label for="email">Email Address</label>
        <input type="text" id="email" name="email" />

        <label for="first-name">First Name</label>
        <input type="text" id="first-name" name="first_name" />

        <label for="last-name">Last Name</label>
        <input type="text" id="last-name" name="last_name" />

        <label for="university-status">University Status</label>
        <select id="university-status" name="university_status">
            <% USER_STATII.each do |word| %>
                <option value="<%= word %>"><%= word %></option>
            <% end %>
        </select>
        <br><br>
        <button class="wdn-button wdn-button-brand" type="submit">Create</button>
    </fieldset>
</form>
